<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admity_bacground_img"
    tools:context=".views.EnquiryActivity">
    <include layout="@layout/layout_toolbar"
        android:id="@+id/enquiry_layout_toolbar"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/enquiryForm_cardview1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/enquiry_layout_toolbar"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/editText_enquiryType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/corner_chat_edittext"
                android:layout_weight="1"
                android:hint="@string/enquiry_type"/>
            <Spinner
                android:id="@+id/enquiryForm_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autofillHints="@string/enquiry_type"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/enquiryForm_cardview2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/enquiryForm_cardview1"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                app:autoSizeTextType="uniform"
                android:lineSpacingExtra="2dp"
                app:autoSizeStepGranularity="2sp"
                android:background="@drawable/corner_chat_edittext"
                android:layout_weight="1"
                android:hint="Message"/>




        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/enquiryForm_cardview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/enquiryForm_cardview2"
        app:cardElevation="10dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Submit"
            android:layout_gravity="end"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:textSize="16sp"/>


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/enquiryForm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enquiryForm_cardview3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="Enquiry List:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/segoe_ui_bold"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/enquiry_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enquiryForm_textView"/>




</RelativeLayout>