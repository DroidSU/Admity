<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.GuardianMeeting">
    <include layout="@layout/layout_toolbar"
        android:id="@+id/guardianMeeting_layout_toobar"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_guardian_meeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/guardianMeeting_layout_toobar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testing, School, 2020-09-21, 1:45PM"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write Your Review:"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Attend"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/white"
                    android:background="@drawable/rec_green_utton"
                    android:layout_marginRight="10dp"
                    />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_red_button"
                    android:text="Refuse"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>



            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textView_guardian_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_below="@id/cardview_guardian_meeting"
        android:text="Guardian Meeting Attending List:"
        android:layout_marginLeft="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_guardian_meeting_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_guardian_meeting"/>

</RelativeLayout>