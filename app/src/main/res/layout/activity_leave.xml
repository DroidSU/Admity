<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LeaveActivity">
    <include layout="@layout/layout_toolbar"
        android:id="@+id/leave_layout_toolbaar"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/leave_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/leave_layout_toolbaar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/leave_blue_background"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Application Form:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:paddingRight="10dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="dd-mm-yy"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:drawableRight="@drawable/ic_calendar"/>


            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason:"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Late-In And Early-Out Reason "
                    android:textSize="16sp"
                    android:background="@drawable/corner_chat_edittext"
                    android:paddingTop="14dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="end"
                android:text="Send"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/leave_button_green"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/leave_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application List:"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/segoe_ui"
        android:textColor="@color/blue"
        android:layout_below="@id/leave_cardView"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leave_recyclerView"
        android:layout_below="@id/leave_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>