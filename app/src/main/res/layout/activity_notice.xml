<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    tools:context=".views.NoticeActivity">
    <include layout="@layout/layout_toolbar"
        android:id="@+id/notice_layout_toolbaar"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/notice_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/notice_layout_toolbaar"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Important Notice"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="3dp"
                android:textColor="@color/blue"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum, or lipsum as it is"
                android:textSize="18sp"

                android:padding="3dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"/>




        </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                app:cardElevation="15dp"
                app:cardCornerRadius="10dp">
"
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rec_red_button"
                android:text="3 Unread"
                android:textColor="@color/white"
                />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_cardView"
        android:layout_above="@id/notice_bottom_navigation"
        android:id="@+id/notice_recyclerView"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/notice_bottom_navigation"
        android:layout_alignParentBottom="true"
        app:menu="@menu/buttom_menu"
        app:itemIconTint="@drawable/tab_color"
        app:itemTextColor="@drawable/tab_color"
        app:labelVisibilityMode="labeled"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        android:background="@drawable/corner_tool"/>


</RelativeLayout>