<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.Messages"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/messageToolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:elevation="10dp"
        android:background="@drawable/gradient_background_blue">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBackmsg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:fontFamily="@font/segoe_ui"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_marginLeft="80dp"/>
            <ImageView
                android:id="@+id/imgBellMsg"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/bellicon" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:verticalScrollbarPosition="defaultPosition"

                android:layout_below="@id/messageToolbar"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerMesssage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </androidx.core.widget.NestedScrollView>













</RelativeLayout>