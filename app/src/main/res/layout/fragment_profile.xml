<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileCirleImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/imgdp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/textProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rita Debnath"
        android:textSize="30dp"
        android:layout_below="@id/profileCirleImg"

        android:fontFamily="@font/segoe_ui"
        android:textStyle="bold"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class(10)"
            android:gravity="center_horizontal"
            android:layout_below="@id/textProfileName"/>


    </RelativeLayout>

</FrameLayout>