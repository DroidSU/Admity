<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:textColor="@color/button_black"
        tools:targetApi="jelly_bean_mr1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <View
            android:id="@+id/dot_indicator_homework"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/dot_disabled" />

        <View
            android:id="@+id/line_indicator_top"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:background="@drawable/state_box" />
        <View
            android:id="@+id/line_indicator_top1"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/state_box" />
        <View
            android:id="@+id/line_indicator_top2"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/state_box" />
        <View
            android:id="@+id/line_indicator_top3"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/state_box" />
        <View
            android:id="@+id/line_indicator_top4"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/state_box" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/homework_sub"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Biology"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/segoe_ui"/>
                <ImageView
                    android:id="@+id/homework_img_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_threedot"/>
            </LinearLayout>
            <TextView
                android:id="@+id/homework_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Human Anatomy"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:padding="3dp"
                android:fontFamily="@font/segoe_ui"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/imgdp"/>
                <TextView
                    android:id="@+id/homework_teacher"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Priya Sarkar"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/homework_button_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:text="View"
                    android:textColor="@color/white"
                    android:background="@drawable/button_homework"/>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>