<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardMessage"
        android:background="@drawable/shadow_background"
        android:elevation="15dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="10dp"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImg_dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/imgdp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:orientation="vertical"
        android:layout_marginStart="90dp">
        <TextView
            android:id="@+id/textMsgFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rohit Setty "
            android:layout_marginTop="8dp"
            android:textColor="@color/sky_blue"
            android:fontFamily="@font/segoe_ui_bold"
            />
        <TextView
            android:id="@+id/textMsgDetails"
            android:layout_width="220dp"
            android:layout_height="60dp"
            app:autoSizeTextType="uniform"
            android:lineSpacingExtra="3dp"
            app:autoSizeStepGranularity="8sp"
            android:layout_marginTop="10dp"
            android:text=" "
            android:fontFamily="@font/segoe_ui"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/txtMsgNumber"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="1"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/segoe_ui"
            android:background="@drawable/textcircle"/>
    <TextView
        android:id="@+id/textMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text=" "
        android:fontFamily="@font/segoe_ui_bold"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>