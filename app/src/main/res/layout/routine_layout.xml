<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/rountine_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/routine_img_left_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/backicon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Student: "/>
        <TextView
            android:id="@+id/routine_class"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="10-A"
            tools:ignore="InvalidId" />
        <ImageView
            android:id="@+id/routine_img_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_icon"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/routine_cardview"
        android:layout_below="@id/rountine_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:id="@+id/mon_routine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Mon"/>
            <TextView
                android:id="@+id/tue_routine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Tue"/>
            <TextView
                android:id="@+id/wed_routine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Wed"/>
            <TextView
                android:id="@+id/thu_routine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Thu"/>
            <TextView
                android:id="@+id/fri_routine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Fri"/>
            <TextView
                android:id="@+id/sat_routine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Sat"
                tools:ignore="InvalidId" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>